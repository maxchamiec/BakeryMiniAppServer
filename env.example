# ========================================
# BAKERY BOT SECURITY CONFIGURATION
# ========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control!

# ========================================
# REQUIRED: Bot Configuration
# ========================================
# Your bot token from @BotFather (REQUIRED)
BOT_TOKEN=your_bot_token_here

# ========================================
# REQUIRED: Admin Configuration
# ========================================
# Your Telegram user ID (get from @userinfobot)
ADMIN_CHAT_ID=123456789

# Admin email for notifications
ADMIN_EMAIL=your_email@gmail.com

# App Password for Gmail SMTP (NOT your regular password!)
ADMIN_EMAIL_PASSWORD=your_app_password_here

# ========================================
# SMTP Configuration
# ========================================
# SMTP server (default: Gmail)
SMTP_SERVER=smtp.gmail.com

# SMTP port (default: 587 for TLS)
SMTP_PORT=587

# Use TLS encryption (default: true)
SMTP_USE_TLS=true

# ========================================
# Web App Configuration
# ========================================
# Base URL for your web app
BASE_WEBAPP_URL=https://93.84.101.4:32159/bot-app/

# ========================================
# SECURITY SETTINGS
# ========================================
# Enable rate limiting (default: true)
ENABLE_RATE_LIMITING=true

# Maximum requests per user per hour (default: 100)
RATE_LIMIT_MAX_REQUESTS=100

# Rate limit window in seconds (default: 3600 = 1 hour)
RATE_LIMIT_WINDOW=3600

# Enable security monitoring (default: true)
ENABLE_SECURITY_MONITORING=true

# Log security events (default: true)
LOG_SECURITY_EVENTS=true

# Log level (default: INFO)
LOG_LEVEL=INFO

# ========================================
# WEBHOOK SECURITY (ADVANCED)
# ========================================
# Allow webhooks (default: false - recommended for security)
ALLOW_WEBHOOKS=false

# Trusted domains for webhooks (comma-separated)
TRUSTED_DOMAINS=yourdomain.com,yourtrusteddomain.com

# Webhook secret for signature verification
WEBHOOK_SECRET=your_webhook_secret_here

# ========================================
# FEATURE FLAGS
# ========================================
# Enable email notifications (default: true)
ENABLE_EMAIL_NOTIFICATIONS=true

# ========================================
# HEROKU SPECIFIC
# ========================================
# Port for the web server
PORT=8080

# ========================================
# SECURITY NOTES
# ========================================
# 1. NEVER share your BOT_TOKEN
# 2. Use App Passwords for Gmail, not regular passwords
# 3. Keep ALLOW_WEBHOOKS=false unless you specifically need webhooks
# 4. Regularly regenerate your bot token if compromised
# 5. Monitor logs for suspicious activity
# 6. Use HTTPS for all web app URLs
# 7. Keep your dependencies updated
# 8. Regularly backup your data
# 9. Monitor rate limiting and security events
# 10. Have a security incident response plan
