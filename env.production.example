# Production environment configuration for MODX API integration

# MODX API Configuration
MODX_API_BASE_URL=https://drazhin.by/api
MODX_API_TIMEOUT=10
MODX_API_CACHE_DURATION=300

# Application Configuration
LOG_LEVEL=INFO
ENABLE_RATE_LIMITING=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Security
HMAC_SECRET=your-production-secret-key-here

# Database (if needed for fallback)
# DATABASE_URL=postgresql://user:password@localhost/bakery_db

# Monitoring
ENABLE_API_MONITORING=true
API_MONITOR_LOG_LEVEL=INFO
