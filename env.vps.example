# VPS Environment Configuration for MODX API Integration

# MODX API Configuration
MODX_API_BASE_URL=https://drazhin.by/api
MODX_API_TIMEOUT=10

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8080

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook

# Application Configuration
LOG_LEVEL=INFO
ENABLE_RATE_LIMITING=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Security
HMAC_SECRET=your-production-secret-key-here

# Web App Configuration
BASE_WEBAPP_URL=https://your-domain.com/bot-app

# Database (if needed for fallback)
# DATABASE_URL=postgresql://user:password@localhost/bakery_db

# Monitoring
ENABLE_API_MONITORING=true
API_MONITOR_LOG_LEVEL=INFO
