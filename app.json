{
  "name": "Bakery Mini App Server",
  "description": "Telegram bot with web app for bakery orders",
  "repository": "https://github.com/yourusername/BakeryMiniAppServer",
  "logo": "https://node-js-sample.herokuapp.com/node.png",
  "keywords": ["python", "telegram", "bot", "aiogram", "aiohttp"],
  "env": {
    "BOT_TOKEN": {
      "description": "Telegram Bot Token",
      "required": true
    },
    "BASE_WEBAPP_URL": {
      "description": "Base URL for web app",
      "required": true
    },
    "ADMIN_CHAT_ID": {
      "description": "Admin Telegram Chat ID",
      "required": true
    },
    "ADMIN_EMAIL": {
      "description": "Admin email address",
      "required": true
    },
    "ADMIN_EMAIL_PASSWORD": {
      "description": "Admin email password for SMTP",
      "required": false
    },
    "SMTP_SERVER": {
      "description": "SMTP server address",
      "value": "smtp.gmail.com",
      "required": false
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
} 