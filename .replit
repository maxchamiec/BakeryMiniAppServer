modules = ["nodejs-20", "web", "bash", "python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["cacert", "xcodebuild", "zlib"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Bakery Bot Server"

[[workflows.workflow]]
name = "Bakery Bot Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_app.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 33439
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["python", "run_app.py"]
